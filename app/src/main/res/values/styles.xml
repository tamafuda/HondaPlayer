<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/md_teal_500_primary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/md_teal_700</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/md_teal_900</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="layout_list_item_normal">
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="style_title_item">
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/md_teal_500_primary</item>

        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/md_teal_700</item>

        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/md_teal_900</item>
    </style>

    <style name="CustomTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
