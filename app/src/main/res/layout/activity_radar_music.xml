<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_radar_music"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="jp.co.honda.music.player.RadarMusicActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_empty" />

    <ImageView
        android:id="@+id/id_screen_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_screen_none"/>

    <Button
        android:id="@+id/download_music1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:layout_marginTop="150dp"
        android:layout_marginStart="120dp"
        android:background="@drawable/info_right" />
    <Button
        android:id="@+id/download_music2"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:layout_marginTop="100dp"
        android:layout_marginStart="210dp"
        android:background="@drawable/info_left" />
    <Button
        android:id="@+id/download_music3"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:layout_marginTop="430dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/info_left" />

    <Button
        android:id="@+id/ic_music1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="90dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/ic_music_circle" />
    <Button
        android:id="@+id/ic_music2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="70dp"
        android:layout_marginStart="330dp"
        android:background="@android:color/transparent" />
    <Button
        android:id="@+id/ic_music3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="320dp"
        android:layout_marginStart="250dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/ai_recommend"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:text="アレンジモード"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_ai_recommend"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
