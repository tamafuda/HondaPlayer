<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    tools:context="jp.co.honda.music.fragment.AMFMFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/color_text_white"
            android:text="周波数" />

        <TextView
            android:id="@+id/id_radio_way"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textSize="20sp"
            android:text="80.0MHz"
            android:textColor="@color/holo_blue_bright" />

        <Button
            android:id="@+id/chanel_up"
            android:background="@drawable/bg_button_up_chanel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/text_chanel_name"
            android:textColor="@color/color_text_white"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="局名" />

        <TextView
            android:id="@+id/id_chanel_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textSize="20sp"
            android:textColor="@color/holo_blue_bright"
            android:text="TOKYO FM" />


        <Button
            android:id="@+id/chanel_down"
            android:background="@drawable/bg_button_down_chanel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/album_art"
            android:layout_marginStart="10dp"
            android:src="@drawable/ikimonogakiri"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/chanel_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_album_name" />
                <TextView
                    android:id="@+id/id_playlist_fmam_1"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="20sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="@color/color_text_white"
                    android:text="Sakura" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/chanel_dow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_singer" />
                <TextView
                    android:id="@+id/id_playlist_fmam_2"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="20sp"
                    android:textColor="@color/color_text_white"
                    android:text="Kimi ga iru" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/song_list"
            android:divider="@color/color_list_row"
            android:dividerHeight="0.5dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >
        </ListView>

    </LinearLayout>

</LinearLayout>
