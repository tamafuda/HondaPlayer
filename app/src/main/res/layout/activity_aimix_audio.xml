<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aimix_audio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_mix"
    android:orientation="vertical"
    tools:context="jp.co.honda.music.player.AIMixAudio">

    <LinearLayout
        android:id="@+id/id_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar_with_button" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/id_layout_ghita_bass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/id_ghita"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_button_mix"
            android:elevation="0dp"
            android:tag="ghita"
            android:text="ギター"
            android:textColor="@color/color_text_white" />

        <Button
            android:id="@+id/id_bass"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_button_mix"
            android:tag="bass"
            android:text="ベース"
            android:textColor="@color/color_text_white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/id_layout_ghita_bass"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_jazz"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_button_mix"
            android:tag="jazz"
            android:text="ジャズ"
            android:textColor="@color/color_text_white" />

        <Button
            android:id="@+id/id_pop"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_button_mix"
            android:tag="pop"
            android:text="ポップ"
            android:textColor="@color/color_text_white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true">

        <include
            layout="@layout/viewgroup_play_control"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </include>
    </LinearLayout>
</RelativeLayout>
